{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts --watch",
    "start": "bun run src/index.ts",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:sync": "prisma db push && prisma generate",
    "db": "prisma generate && prisma db push"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.2.0",
    "@elysiajs/swagger": "^1.3.1",
    "@prisma/client": "^6.13.0",
    "dotenv": "^17.2.1",
    "elysia": "^1.2.25",
    "prismabox": "^1.1.25",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "tsdown": "^0.12.9",
    "typescript": "^5.8.2",
    "@types/bun": "^1.2.6",
    "prisma": "^6.13.0"
  }
}
